<div class="container">
  <div class="media" style="margin-top: 35px">
    <div class="media-left">
      <img src="<%= @question.gravatar %>" class="media-object media-middle" style="width:100px">
    </div>
    <div class="media-body" style="margin-left: 10px;">
      <h4 class="media-heading"><%= @question.email %> asked</h4>
      <p><%= time_ago_in_words @question.created_at %> ago</p>
      <p><%= @question.body %></p>
      <div>
        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#new-anwser-modal">Submit answer</button>
      </div>
      <% if @answers.empty? %>
        <div class="alert alert-info">Nothing here yet. Be the first to answer?</div>
      <% else %>
        <% @answers.each do |answer| %>
          <div class="media" style="margin-top: 25px; margin-bottom: 25px;">
            <div class="media-left">
              <img src="<%= answer.gravatar %>" class="media-object" style="width:100px">
            </div>
            <div class="media-body" style="margin-left: 10px;">
              <h4 class="media-heading"><%= answer.email %> <small><i><%= time_ago_in_words answer.created_at %> ago</i></small></h4>
              <p><%= answer.body %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<%= render ("layouts/new_answer_form")%>

