<div class="col-sm-5 col-md-5 col-xs-5 row">
  <div>
      <div class="col-sm-4 col-md-4 col-xs-8" style="padding: 5px">
          <img alt="" src="<%= @question.gravatar %>" style="height: 150px; width: 150px" />
      </div>
      <div class="col-sm-8 col-md-8 col-xs-16">
          <h5><%= @question.email %> asked:</h5>
          <p style="font-size:15px; color:#03225C;"><%= @question.body %></p>
      </div>
  </div>
</div>


<button type="button" class="btn btn-sm btn-outline-secondary" data-toggle="modal" data-target="#new-anwser-modal">Submit answer</button>

<%= render ("layouts/new_answer_form")%>

<div class="row m-md">
  <% if @answers.empty? %>
    <div class="alert alert-info">Nothing here yet. Be the first to answer?</div>
  <% else %>
    <%= @answers.each do |answer| %> 
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <img class="card-img-top" src="<%= answer.gravatar %>" alt="Card image cap">
          <div class="card-body">
            <h4><%= answer.email %> answered:</h4>
            <p><%= time_ago_in_words answer.created_at %> ago</p>
            <p class="card-text"><%= answer.body %></p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>